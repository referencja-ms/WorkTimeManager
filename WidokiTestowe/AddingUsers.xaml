<UserControl x:Class="WidokiTestowe.AddingUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WidokiTestowe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10 10 5 10">
            <TextBlock Text="Login" />
            <TextBox x:Name="login" Margin="0 0 0 10" />
            
            <TextBlock Text="Imię" />
            <TextBox x:Name="firstName" Margin="0 0 0 10" />

            <TextBlock Text="Nazwisko" />
            <TextBox x:Name="lastName" Margin="0 0 0 10" />

            <TextBlock Text="Email" />
            <TextBox x:Name="email" Margin="0 0 0 10" />

            <TextBlock Text="Adres" />
            <TextBox x:Name="address" Margin="0 0 0 10" />
            
            <TextBlock Text="Numer telefonu" />
            <TextBox x:Name="phoneNumber" Margin="0 0 0 10" />
        </StackPanel>
    </Grid>
</UserControl>
