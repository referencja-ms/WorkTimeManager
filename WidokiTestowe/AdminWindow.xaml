<Window x:Class="WorkTimeManager.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTimeManager"
        mc:Ignorable="d"
        Title="Administrator" Height="510" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="User management">
                <local:UsersManagement Margin="0,0,0,0" />
            </TabItem>

            <TabItem Header="Project management">
                <local:ProjectsManagement Margin="0,0,0,0" />
            </TabItem>

            <TabItem Header="Customer management">
                <local:CustomersManagement Margin="0,0,0,0" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
